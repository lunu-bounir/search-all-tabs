{
  "manifest_version": 2,
  "version": "0.1.0",
  "name": "Search all Tabs",
  "description": "A powerful offline indexing and searching tool to find matching tabs in a popup",

  "icons": {
     "16": "data/icons/16.png",
     "32": "data/icons/32.png",
     "48": "data/icons/48.png",
     "64": "data/icons/64.png",
     "128": "data/icons/128.png",
     "256": "data/icons/256.png",
     "512": "data/icons/512.png"
  },
  "offline_enabled": true,
  "permissions": [
    "<all_urls>",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "data/popup/index.html",
    "theme_icons": [{
      "light": "data/icons/light/16.png",
      "dark": "data/icons/16.png",
      "size": 16
    }, {
      "light": "data/icons/light/32.png",
      "dark": "data/icons/32.png",
      "size": 32
    }, {
      "light": "data/icons/light/48.png",
      "dark": "data/icons/48.png",
      "size": 48
    }, {
      "light": "data/icons/light/64.png",
      "dark": "data/icons/64.png",
      "size": 64
    }]
  },
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  }
}
