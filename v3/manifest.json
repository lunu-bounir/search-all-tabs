{
  "manifest_version": 3,
  "version": "0.4.5",
  "name": "Search all Tabs",
  "description": "__MSG_description__",
  "default_locale": "en",
  "icons": {
     "16": "data/icons/16.png",
     "32": "data/icons/32.png",
     "48": "data/icons/48.png",
     "64": "data/icons/64.png",
     "128": "data/icons/128.png",
     "256": "data/icons/256.png",
     "512": "data/icons/512.png"
  },
  "offline_enabled": true,
  "homepage_url": "https://add0n.com/search-all-tabs.html",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "optional_permissions": [
    "tabs"
  ],
  "action": {
    "default_popup": "data/popup/index.html"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "sandbox": {
     "pages": ["data/xapian/sandbox/index.html"]
  },
  "commands": {
    "_execute_action": {
      "description": "Open the popup view with a shortcut"
    },
    "_execute_sidebar_action": {
      "description": "Open the sidebar view with a shortcut"
    }
  }
}
